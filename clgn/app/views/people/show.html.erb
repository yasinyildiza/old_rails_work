<h2 class="page_name"><%= (t "show_person")%></h2>
<div class="inner_wrap">
  <div class="field_list">
    <div class="field odd">
      <label class="show_label"><%= (t "list_attributes.id") %></label>
      <span><%= @person.id %></span>
    </div>
    <div class="field">
      <label class="show_label"><%= (t "list_attributes.name") %></label>
      <span><%= @person.name %></span>
    </div>
    <div class="field odd">
      <label class="show_label"><%= (t "list_attributes.email") %></label>
      <span><%= mail_to @person.user.email %></span>
    </div>
    <div class="field">
      <label class="show_label"><%= (t "list_attributes.phone_number") %></label>
      <span><%= @person.phone_number %></span>
    </div>
    <div class="field">
      <label class="show_label"><%= (t "list_attributes.birthday") %></label>
      <span><%= @person.birthday %></span>
    </div>
  </div>
</div>
