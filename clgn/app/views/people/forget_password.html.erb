<h2 class="page_name"><%= (t "change_password")%></h2>


<% if @person.errors.any? %>
    <div class="alert-message error">
      <p>
        <strong>
            <%= t "errors.save_error", :count => @person.errors.count, :save_obj => (t "user") %>
        </strong>
        <br />
        <% @person.errors.full_messages.each do |msg| %>
            <strong>- <%= msg %></strong><br/>
        <% end %>
      </p>
    </div>
  <% end %>



  <%= simple_form_for @person.user,:url => user_save_password_path({:id => @person.user.id}) do |f| %>
  <div class="inner_wrap">
    <div class="form field_list">
		<%= render :partial => 'password_form', :locals => { :f => f} %>
		<div class="submit">
        <%= f.button :submit, (t "actions.save"), :id => "fs"%>
      </div>
    </div>
  </div>
<% end %>