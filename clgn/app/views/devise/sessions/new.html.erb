<%= content_for :authentication_item do %>
  <div id="login">
    <h2><%=(t "login.sign_in")%></h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="login-middle">
        <div class="field"><%= f.label (t "login.email")%><br />
          <%= f.email_field :email, :autofocus => true %>
        </div>
        <div class="field"><%= f.label (t "login.password") %><br />
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="login-bottom">
        <% if devise_mapping.rememberable? -%>
          <div class="field"><%= f.check_box :remember_me %> <%= f.label (t "login.remember_me") %></div>
        <% end -%>
        <div class="field"><%= f.submit I18n.t("login.sign_in"),:class=>"submit",:label => (t "login.sign_in")%></div>
        <!--<div class="field">
          <%= link_to (t "login.sign_up"), new_user_path, :class => "submit" %>
        </div>-->
        <div class="field">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>