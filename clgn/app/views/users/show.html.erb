<h2 class="page_name"><%= (t "show_user")%></h2>
<div class="inner_wrap">
  <div class="field_list">
    <div class="field odd">
      <label class="show_label"><%= (t "list_attributes.id") %></label>
      <span><%= @user.id %></span>
    </div>
    <div class="field">
      <label class="show_label"><%= (t "list_attributes.name") %></label>
      <span><%= @user.real_user.name if @user.real_user %></span>
    </div>
    <div class="field odd">
      <label class="show_label"><%= (t "list_attributes.email") %></label>
      <span><%= mail_to @user.email %></span>
    </div>
    <div class="field">
      <label class="show_label"><%= (t "list_attributes.phone_number") %></label>
      <span><%= @user.real_user.phone_number if @user.real_user %></span>
    </div>
  </div>
</div>
