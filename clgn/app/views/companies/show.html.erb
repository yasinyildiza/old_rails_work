<h2 class="page_name"><%= (t "show_company")%></h2>
<div class="inner_wrap">
  <div class="field_list">
    <div class="field odd">
      <label class="show_label"><%= (t "list_attributes.id") %></label>
      <span><%= @company.id %></span>
    </div>
    <div class="field">
      <label class="show_label"><%= (t "list_attributes.name") %></label>
      <span><%= @company.name %></span>
    </div>
    <div class="field">
      <label class="show_label"><%= (t "list_attributes.authorized_person") %></label>
      <span><%= @company.authorized_person %></span>
    </div>
    <div class="field odd">
      <label class="show_label"><%= (t "list_attributes.email") %></label>
      <span><%= mail_to @company.user.email %></span>
    </div>
    <div class="field">
      <label class="show_label"><%= (t "list_attributes.phone_number") %></label>
      <span><%= @company.phone_number %></span>
    </div>
    <div class="field">
      <label class="show_label"><%= (t "list_attributes.website") %></label>
      <span><%= @company.website %></span>
    </div>
  </div>
</div>
