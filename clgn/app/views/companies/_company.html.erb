<tr>
    <td><%= company.id %></td>
    <td><%= company.name %></td>
    <td><%= company.authorized_person %></td>
    <td style="max-width: 150px; word-wrap: break-word;"><%=mail_to company.user.email %></td>
    <td><%= company.phone_number %></td>
    <td><%= link_to company.website %></td>

    <td class="act">
        <%= link_to (t "actions.show"), company %>
        <%= link_to (t "actions.edit"), edit_company_path(company) %>
        <%= link_to (t "actions.destroy"), company, method: :delete, data: { confirm: I18n.t("actions.confirm_to") } %></td>
    </td>
</tr>
