<%= simple_form_for(@method_parameter) do |f| %>
  <% if @method_parameter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@method_parameter.errors.count, "error") %> prohibited this method_parameter from being saved:</h2>

      <ul>
      <% @method_parameter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @method_member %>
    <div class="field">
      <%= f.label :method_member %>
      <%= f.hidden_field :method_member_id, :value => @method_member.id %>
      <%= link_to @method_member.model_class.project.name, @method_member.model_class.project %> | <%= link_to @method_member.model_class.name, @method_member.model_class %> | <%= link_to @method_member.name, @method_member %>
    </div>
  <% else %>
    <div class="field">
      <%= f.label :method_member %><br />
      <%= f.input :method_member_id, label: false, :collection => MethodMember.all.collect{|x| [x.name, x.id]}, :as => :select %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :data_type %><br />
    <%= f.input :data_type_id, label: false, :collection => DataType.all.collect{|x| [x.name, x.id]}, :as => :select %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :warning %><br />
    <%= f.text_field :warning %>
  </div>
  <div class="actions">
    <%= f.submit :value => "Save" %>
  </div>
<% end %>
