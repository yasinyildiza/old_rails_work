<div class="image_world container project category new_work"><%= (t "model.work.new") %></div>
<%= simple_form_for project do |f| %>
  <div class="image_world inner_wrap">
    <div class="image_world form fields without_margin">
	  <%= f.simple_fields_for :works, project.works.build do |work| %>
	    <div class="image_world form field">
	      <%= work.input :category_id, :label=> (t "model.category.singular"), :label_html => {:class => "image_world form field label"}, :collection => Category.all.collect{|r| [r.name, r.id]}, :as => :select %>
		</div>
		<div class="image_world form field odd">
		  <%= work.input :name, :label => (t "attributes.name"), :label_html => {:class => "image_world form field label"} %> 
		</div>
		<div class="image_world form field">
		  <%= work.input :description, :label => (t "attributes.description"), :label_html => {:class => "image_world form field label"} %> 
		</div>
	  <% end %>
      <div class="image_world container form submit"><%= f.button :submit, :id=> "fs", :value=>(t "actions.save") %></div>
    </div>
  </div>
<% end %>