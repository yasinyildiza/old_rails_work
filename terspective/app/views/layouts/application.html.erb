<!DOCTYPE html>
<html>
	<head>
	  <title>Terspective</title>
	  <%= stylesheet_link_tag "application", :media => "all" %>
	  <%= stylesheet_link_tag "jquery-ui", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="terspective container" id="main">
			<% if current_user %>
			  <div class="terspective application.title">
			  	<%= link_to "Terspective", root_path, :class => "terspective application", :id => "title" %>
			  </div>
			  <div class="terspective button" id="right_user">
			  	<div class="terspective container" id="user_name">
			      <%= current_user.email %>
			    </div>
			    <div class="terspective container" id="logout_button">
			      <%= link_to (t "login.sign_out"), destroy_user_session_path, :method => "delete" %>
			    </div>
			  </div>
			  <div class="terspective container" id="all_content">
			    <div class="terspective container" id="general_actions">
			    <div class="terspective container" id="content">
			      <%= yield %>
			    </div>
			  </div>
			<% else %>
			  <div class="terspective container" id="login_area">
				<%= yield :authentication_item %>
			  </div>
			<% end %>
			
		</div>
	</body>
</html>
